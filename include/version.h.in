#pragma once

#include <string>

namespace palvalidator
{
  class Version
  {
  public:
    // Version components
    static constexpr int MAJOR = @PROJECT_VERSION_MAJOR@;
    static constexpr int MINOR = @PROJECT_VERSION_MINOR@;
    static constexpr int PATCH = @PROJECT_VERSION_PATCH@;
    
    // Git information
    static constexpr const char* GIT_COMMIT = "@GIT_COMMIT_HASH@";
    static constexpr const char* GIT_DESCRIBE = "@GIT_DESCRIBE@";
    
    // Build information
    static constexpr const char* BUILD_DATE = __DATE__;
    static constexpr const char* BUILD_TIME = __TIME__;
    
    // Formatted strings
    static std::string getVersion() {
        return std::to_string(MAJOR) + "." + 
               std::to_string(MINOR) + "." + 
               std::to_string(PATCH);
    }
    
    static std::string getVersionFull() {
        return getVersion() + " (" + GIT_COMMIT + ")";
    }
    
    static std::string getBuildInfo() {
        return std::string("Built on ") + BUILD_DATE + " at " + BUILD_TIME;
    }
    
    static std::string getAboutString() {
        return "MyProject v" + getVersionFull() + "\n" + getBuildInfo();
    }
  };
}
